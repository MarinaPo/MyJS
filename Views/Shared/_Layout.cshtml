                        <li>@Html.ActionLink("API", "Index", "Help", new { area = "HelpPage" }, null)</li>
                    </ul>
                </div>


            </div>
        </div>*@
        
        <hr/>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>@ApplicationInfo.GetApplicationInfo().ToString()</p>
                <table>
                    <tbody>
                        <tr>
                            <td>administrator</td>
                        </tr>
                        <tr>
                            <td>customer</td>
                        </tr>
                        <tr>
                            <td>merchandiser</td>
                        </tr>
                        <tr>
                            <td>supervisor</td>
                        </tr>
                        <tr>
                            <td></td>
                        </tr>

                    </tbody>
                </table>
            </footer>
        </div>

        @RenderSection("Scripts", required: false)
    </body>
</html>
