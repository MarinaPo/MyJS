@Styles.Render("~/Content/CustomStyles")
@Styles.Render("~/Content/buying")
@Styles.Render("~/Content/CustomStyles/orderlist.css")
@Styles.Render("~/Content/CustomStyles/administration.css")

<p>This page is appointed for selecting and buying products</p>
@*<p>debug knockout binding:</p>*@
@*<pre data-bind="text: ko.toJSON(clients, null, 2)"></pre>*@

<fieldset class="the-fieldset">
    <legend class="the-legend">Поиск</legend>
    <div class="col-md-12">
        <div class="row">
            <div class="padding-left-right col-md-4">
                <label>ФИО</label>
            </div>
            <div class="padding-left-right col-md-4">
                <label>Город</label>
            </div>

            <div class="padding-left-right col-md-4">
                <label>Организация</label>
            </div>
           </div>
        <div class="row">
            <div class="padding-left-right col-md-4">
                <input class="size-elements form-control input-sm" data-bind="value: inputForSearchText">
            </div>
            <div class="padding-left-right col-md-4">
                <select id="typefilter2" class="size-elements form-control input-sm"></select>
            </div>

            <div class="padding-left-right col-md-4">
                <input id="textfilter" class="size-elements form-control input-sm">
            </div>

            <div class="col-md-offset-10 col-md-2">
                <button class="btn-search btn btn- bg-primary" data-bind="click:clickSearchButton">Найти</button>
            </div>
        </div>
    </div>
  </fieldset>

<div>
    <fieldset class="the-fieldset">
        <legend>Клиенты</legend>
        <div class="row">
            <div class="col-md-offset-10 col-md-2">
                <select class="form-control">
                    <option value="10">Show 10 items</option>
                    <option value="25">Show 25 items</option>
                </select>
            </div>
        </div>
        <br />

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Город</th>
                    <th>Адрес</th>
                    <th>Организация</th>
                    <th>Телефон</th>
                    <th>Оборудование</th>
                    <th>Изменить</th>
                    <th>Удалить</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: pagedRows">
                <tr>
                    <td data-bind="text: FIO"></td>
                    <td data-bind="text: City"></td>
                    <td data-bind="text: Address"></td>
                    <td data-bind="text: Organization"></td>
                    <td data-bind="text: Telephone"></td>
                    <td>
                        <button class="btn btn-default"><span class="glyphicon glyphicon-hdd"></span></button>
                    </td>
                    <td>
                        <button class="btn btn-default"><span class="glyphicon glyphicon-edit"></span></button>
                    </td>
                    
                    <td><button data-bind="click: $parent.showDeleteMessage" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></button></td>
                    
                </tr>
            </tbody>
        </table>


        <div class="row">
            <h5 class="col-md-4">Page # <strong data-bind="text: pageIndex"></strong> from <strong data-bind="text: maxPageIndex"></strong></h5>
            <button class="col-md-1 btn btn-primary btn-xs navigation-buttons" data-bind="click: navigationToFirst, enable: pageIndex() > 1">First</button>
            <button class="col-md-1 btn btn-primary btn-xs navigation-buttons" data-bind="click: previousPage, enable: pageIndex() > 1"><span class="glyphicon glyphicon-backward"></span> Backward</button>
            <button class="col-md-1 btn btn-primary btn-xs navigation-buttons" data-bind="click: nextPage, enable: pageIndex() < maxPageIndex()">Forward <span class="glyphicon glyphicon-forward"></span></button>
            <button class="col-md-1 btn btn-primary btn-xs navigation-buttons" data-bind="click: navigationToLast, disable: pageIndex() == maxPageIndex()">Last</button>
        </div>
    </fieldset>
    </div>

<div class="modal fade bs-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="col-md-12">
                <fieldset class="the-fieldset modal-fieldset">
                    <legend class="the-legend">Warning</legend>
                    <button type="button" class="close modal-close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <div style="text-align: center">
                        <div>Данный человек будет удален из системы</div>
                        <div>Продолжить?</div>
                        <br />
                        <button style="width: 60px" type="button" class="btn btn-default btn-sm" data-bind="click: deleteUser">Yes</button>
                        <button style="width: 60px" type="button" class="btn btn-default btn-sm" data-dismiss="modal">No</button>
                    </div>
                </fieldset>
                <br />
            </div>
        </div>
    </div>
</div>


<div class="modal fade delete-fail" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="col-md-12">
                <fieldset class="the-fieldset modal-fieldset">
                    <legend class="the-legend">Warning</legend>
                    <button type="button" class="close modal-close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <div style="text-align: center">
                        <div>Данны человек б</div>
                        <div>Please refresh the page to ensure.</div>
                        <br />
                        <button style="width: 60px" type="button" class="btn btn-default btn-sm" data-dismiss="modal">Ok</button>
                    </div>
                </fieldset>
                <br />
            </div>
        </div>
    </div>
</div>
@Styles.Render("~/Content/administration")
   
